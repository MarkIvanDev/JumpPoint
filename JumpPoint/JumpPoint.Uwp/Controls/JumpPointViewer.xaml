        </DataTemplate>

        <DataTemplate x:Key="AppLinkListTemplate"
                      x:DataType="items:AppLink">
            <Grid Background="Transparent"
                  ContextFlyout="{StaticResource ItemContextFlyout}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="*"
                                      MinWidth="200" />
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Border Width="20"
                        Height="20"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        x:Phase="1"
                        Background="{x:Bind Background, Converter={StaticResource DrawingColorBrushConverter}, Mode=OneWay}"
                        Loaded="OnIconLoaded">
                    <Image Source="{x:Bind Logo, Converter={StaticResource AppLinkDetailsLogoConverter}, Mode=OneWay}"
                           Width="20"
                           Height="20" />
                </Border>

                <!-- Name -->
                <HyperlinkButton VerticalAlignment="Center"
                                 HorizontalContentAlignment="Stretch"
                                 Margin="8,0"
                                 Grid.Column="1"
                                 Padding="0"
                                 Click="OnItemOpened"
                                 Foreground="{ThemeResource ApplicationForegroundThemeBrush}">
                    <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}"
                               ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap"
                               FontFamily="{x:Bind helpers:ServiceLocator.AppSettings.Font, Mode=OneWay}"
                               FontStyle="{x:Bind gtext:FontStyleExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStyle), Mode=OneWay}"
                               FontWeight="{x:Bind gtext:FontWeightExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontWeight), Mode=OneWay}"
                               FontStretch="{x:Bind gtext:FontStretchExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStretch), Mode=OneWay}" />
                </HyperlinkButton>
            </Grid>
        </DataTemplate>

        <helpers:JumpPointItemTemplateSelector x:Key="ListTemplateSelector"
                                               FolderTemplate="{StaticResource FolderListTemplate}"
                                               FileTemplate="{StaticResource FileListTemplate}"
                                               DriveTemplate="{StaticResource DriveListTemplate}"
                                               WorkspaceTemplate="{StaticResource WorkspaceListTemplate}"
                                               LibraryTemplate="{StaticResource LibraryListTemplate}"
                                               AppLinkTemplate="{StaticResource AppLinkListTemplate}" />
        <!--#endregion-->

    </UserControl.Resources>

    <Grid RowSpacing="4">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="GridState">
                    <VisualState.StateTriggers>
                        <local:EqualityTrigger LeftValue="{x:Bind Context.Settings.Layout, Mode=OneWay}"
                                               RightValue="{x:Bind platform:LayoutModes.Grid}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="entranceTransition.FromVerticalOffset"
                                Value="0" />
                        <Setter Target="entranceTransition.FromHorizontalOffset"
                                Value="50" />
                        <Setter Target="allView.Padding"
                                Value="4,0,4,12" /><!-- 4,0,-10,12 -->
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollBarVisibility)"
                                Value="Disabled" />
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollMode)"
                                Value="Disabled" />
                        <Setter Target="allView.(ScrollViewer.IsHorizontalRailEnabled)"
                                Value="False" />
                        <Setter Target="allView.ItemTemplateSelector"
                                Value="{StaticResource GridTemplateSelector}" />
                        <Setter Target="allView.ItemContainerStyle"
                                Value="{StaticResource GridLayoutItemStyle}" />
                        <Setter Target="allView.ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal"
                                                   AreStickyGroupHeadersEnabled="False" />
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="DetailsState">
                    <VisualState.StateTriggers>
                        <local:EqualityTrigger LeftValue="{x:Bind Context.Settings.Layout, Mode=OneWay}"
                                               RightValue="{x:Bind platform:LayoutModes.Details}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="entranceTransition.FromVerticalOffset"
                                Value="50" />
                        <Setter Target="entranceTransition.FromHorizontalOffset"
                                Value="0" />
                        <Setter Target="allView.Padding"
                                Value="4,0,4,12" />
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollBarVisibility)"
                                Value="Auto" />
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollMode)"
                                Value="Enabled" />
                        <Setter Target="allView.(ScrollViewer.IsHorizontalRailEnabled)"
                                Value="True" />
                        <Setter Target="allView.ItemTemplateSelector"
                                Value="{StaticResource DetailsTemplateSelector}" />
                        <Setter Target="allView.ItemContainerStyle"
                                Value="{StaticResource DetailsLayoutItemStyle}" />
                        <Setter Target="allView.ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel AreStickyGroupHeadersEnabled="False" />
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="TilesState">
                    <VisualState.StateTriggers>
                        <local:EqualityTrigger LeftValue="{x:Bind Context.Settings.Layout, Mode=OneWay}"
                                               RightValue="{x:Bind platform:LayoutModes.Tiles}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="entranceTransition.FromVerticalOffset"
                                Value="0" />
                        <Setter Target="entranceTransition.FromHorizontalOffset"
                                Value="50" />
                        <Setter Target="allView.Padding"
                                Value="4,0,4,12" />
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollBarVisibility)"
                                Value="Disabled" />
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollMode)"
                                Value="Disabled" />
                        <Setter Target="allView.(ScrollViewer.IsHorizontalRailEnabled)"
                                Value="False" />
                        <Setter Target="allView.ItemTemplateSelector"
                                Value="{StaticResource TilesTemplateSelector}" />
                        <Setter Target="allView.ItemContainerStyle"
                                Value="{StaticResource TilesLayoutItemStyle}" />
                        <Setter Target="allView.ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal"
                                                   AreStickyGroupHeadersEnabled="False" />
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="ListState">
                    <VisualState.StateTriggers>
                        <local:EqualityTrigger LeftValue="{x:Bind Context.Settings.Layout, Mode=OneWay}"
                                               RightValue="{x:Bind platform:LayoutModes.List}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="entranceTransition.FromVerticalOffset"
                                Value="0" />
                        <Setter Target="entranceTransition.FromHorizontalOffset"
                                Value="50" />
                        <Setter Target="allView.Padding"
                                Value="4,0,4,12" />
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollBarVisibility)"
                                Value="Disabled" />
                        <Setter Target="allView.(ScrollViewer.HorizontalScrollMode)"
                                Value="Disabled" />
                        <Setter Target="allView.(ScrollViewer.IsHorizontalRailEnabled)"
                                Value="False" />
                        <Setter Target="allView.ItemTemplateSelector"
                                Value="{StaticResource ListTemplateSelector}" />
                        <Setter Target="allView.ItemContainerStyle"
                                Value="{StaticResource ListLayoutItemStyle}" />
                        <Setter Target="allView.ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal"
                                                   AreStickyGroupHeadersEnabled="False" />
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ContentControl Content="{x:Bind Header, Mode=OneWay}"
                        HorizontalContentAlignment="Stretch"
                        x:Name="viewHeader"/>

        <SemanticZoom Grid.Row="1"
                      x:Name="semanticZoom">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="allView"
                          ScrollViewer.IsVerticalScrollChainingEnabled="False"
                          IsDoubleTapEnabled="True"
                          IsMultiSelectCheckBoxEnabled="{x:Bind helpers:ServiceLocator.AppSettings.ShowCheckbox, Mode=OneWay}"
                          SelectionMode="{x:Bind helpers:ServiceLocator.AppSettings.ShowCheckbox, Converter={StaticResource MultipleWhenTrueConverter}, Mode=OneWay}"
                          ItemsSource="{x:Bind ItemsViewSource.View, Mode=OneWay}"
                          AllowDrop="True"
                          CanDragItems="True">
                    <ListView.Header>
                        <Grid x:Name="gridDetailsHeader"
                              Height="36"
                              Margin="-4,0"
                              Padding="16,0,24,0"
                              Visibility="{x:Bind GetDetailsHeaderVisibility(Context.Settings.Layout), Mode=OneWay}"
                              Background="{ThemeResource SystemChromeAltHighColor}"
                              Tapped="OnDetailsHeaderTapped">
                            <Grid.ChildrenTransitions>
                                <TransitionCollection>
                                    <RepositionThemeTransition />
                                </TransitionCollection>
                            </Grid.ChildrenTransitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="28" />
                                <ColumnDefinition Width="*"
                                                  MinWidth="200" />
                                <ColumnDefinition Width="0.35*"
                                                  MinWidth="150" />
                                <ColumnDefinition Width="0.25*"
                                                  MinWidth="100" />
                                <ColumnDefinition Width="0.25*"
                                                  MinWidth="100" />
                            </Grid.ColumnDefinitions>
                            <CheckBox Visibility="{x:Bind helpers:ServiceLocator.AppSettings.ShowCheckbox, Mode=OneWay}"
                                      Unchecked="OnCheckboxUnchecked"
                                      Checked="OnCheckboxChecked"
                                      Margin="0,0,12,0"
                                      MinWidth="0"
                                      MinHeight="0"
                                      Padding="0"
                                      VerticalAlignment="Center" />

                            <TextBlock Margin="8,0"
                                       Grid.Column="2"
                                       Text="Name"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                            <TextBlock Margin="8,0"
                                       Grid.Column="3"
                                       Text="Date"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                            <TextBlock Margin="8,0"
                                       Grid.Column="4"
                                       Text="Type"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                            <TextBlock Margin="8,0"
                                       Grid.Column="5"
                                       Text="Size"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                        </Grid>
                    </ListView.Header>
                    <ListView.GroupStyle>
                        <GroupStyle HidesIfEmpty="True">
                            <GroupStyle.HeaderContainerStyle>
                                <Style TargetType="ListViewHeaderItem">
                                    <Setter Property="FontSize"
                                            Value="16" />
                                    <Setter Property="FontWeight"
                                            Value="SemiBold" />
                                    <Setter Property="Foreground"
                                            Value="{ThemeResource SystemControlPageTextBaseMediumBrush}" />
                                    <Setter Property="Margin"
                                            Value="0,2,0,0" />
                                    <Setter Property="Padding"
                                            Value="12,4" />
                                    <Setter Property="HorizontalAlignment"
                                            Value="Stretch" />
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch" />
                                    <Setter Property="VerticalContentAlignment"
                                            Value="Stretch" />
                                    <Setter Property="MinHeight"
                                            Value="0" />
                                    <Setter Property="UseSystemFocusVisuals"
                                            Value="{StaticResource UseSystemFocusVisuals}" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewHeaderItem">
                                                <ContentPresenter x:Name="ContentPresenter"
                                                                  Background="{TemplateBinding Background}"
                                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                                  CornerRadius="{TemplateBinding CornerRadius}"
                                                                  Margin="{TemplateBinding Margin}"
                                                                  Padding="{TemplateBinding Padding}"
                                                                  Content="{TemplateBinding Content}"
                                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                  ContentTransitions="{TemplateBinding ContentTransitions}"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.HeaderContainerStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Grid ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Key}" />
                                        <TextBlock Text="{Binding Items.Count, Converter={StaticResource StringFormatConverter}, ConverterParameter='({0})'}"
                                                   Grid.Column="1" />
                                        <MenuFlyoutSeparator Padding="0,2,0,0"
                                                             VerticalAlignment="Center"
                                                             Grid.Column="2" />
                                    </Grid>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition IsStaggeringEnabled="False"
                                                     x:Name="entranceTransition" />
                            <AddDeleteThemeTransition />
                            <!--<ReorderThemeTransition />
                    <RepositionThemeTransition />-->
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                    <i:Interaction.Behaviors>
                        <behaviors:JumpPointItemMultiSelectBehavior SelectedItems="{x:Bind SelectedItems, Mode=OneWay}" />
                        <behaviors:JumpPointViewerDragDropBehavior Context="{x:Bind Context, Mode=OneWay}"
                                                                   CopyCommand="{Binding Source={StaticResource Locator}, Path=CommandHelper.CopyToCommand}"
                                                                   MoveCommand="{Binding Source={StaticResource Locator}, Path=CommandHelper.MoveToCommand}"/>
                        <ngbehaviors:RightTappedSelectionBehavior />
                        <behaviors:PathContextBehavior Flyout="{StaticResource PathContextFlyout}" />
                        <core:EventTriggerBehavior EventName="Tapped">
                            <actions:OpenCommandBarFlyoutAction CommandBarFlyout="{StaticResource ItemContextFlyout}"
                                                                ShowMode="Transient" />
                            <actions:TappedSelectionAction AssociatedObject="{x:Bind allView}" />
                        </core:EventTriggerBehavior>
                        <core:EventTriggerBehavior EventName="DoubleTapped">
                            <core:InvokeCommandAction Command="{StaticResource OpenItemCommand}"
                                                      InputConverter="{StaticResource ItemDoubleClickEventArgsConverter}"
                                                      InputConverterParameter="{x:Bind Context.TabKey, Mode=OneWay}"/>
                        </core:EventTriggerBehavior>
                        <!--<behaviors:RubberBandSelectionBehavior RubberBand="{x:Bind rectRubberBand}" />-->
                        <tkbehaviors:StickyHeaderBehavior />
                        <!--<tkbehaviors:FadeHeaderBehavior HeaderElement="{x:Bind viewHeader}" />-->
                    </i:Interaction.Behaviors>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <ListView ItemsSource="{x:Bind ItemsViewSource.View.CollectionGroups, Mode=OneWay}"
                          SelectionMode="Single"
                          Padding="4">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="VerticalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Padding"
                                    Value="20,8" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8">
                                <TextBlock Text="{Binding Group.Key}"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Group.Items.Count, Converter={StaticResource StringFormatConverter}, ConverterParameter='({0})'}"
                                           FontSize="16"
                                           FontWeight="SemiBold" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>

        <StackPanel Grid.RowSpan="2"
                    Margin="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{x:Bind NothingToShowConverter.Output, Mode=OneWay}">
            <Image HorizontalAlignment="Center"
                   Width="96"
                   Height="96">
                <Image.Source>
                    <BitmapImage DecodePixelHeight="96"
                                 DecodePixelWidth="96"
                                 DecodePixelType="Logical"
                                 UriSource="/Assets/Icons/Empty.png" />
                </Image.Source>
            </Image>
            <TextBlock Text="Nothing to show"
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center" />

            <ContentControl Content="{x:Bind QuickActions, Mode=OneWay}"
                            HorizontalContentAlignment="Stretch"
                            HorizontalAlignment="Center"
                            x:Name="quickActions" />
        </StackPanel>

        <Canvas HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Row="1">
            <Rectangle x:Name="rectRubberBand"
                       Canvas.Left="0"
                       Canvas.Top="0"
                       Width="0"
                       Height="0"
                       Fill="{ThemeResource SystemAccentColor}"
                       Opacity=".5"
                       Stroke="{ThemeResource SystemAccentColorLight1}"
                       StrokeThickness="1" />
        </Canvas>
    </Grid>
</UserControl>
