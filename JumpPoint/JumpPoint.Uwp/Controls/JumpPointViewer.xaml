<UserControl
    x:Class="JumpPoint.Uwp.Controls.JumpPointViewer"
    x:Name="jumpPointViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JumpPoint.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:conv="using:JumpPoint.Uwp.Converters"
    xmlns:helpers="using:JumpPoint.Uwp.Helpers"
    xmlns:items="using:JumpPoint.Platform.Items"
    xmlns:services="using:JumpPoint.Platform.Services"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:ngconv="using:NittyGritty.Uwp.Converters"
    xmlns:tkbehaviors="using:Microsoft.Toolkit.Uwp.UI.Behaviors"
    xmlns:ngbehaviors="using:NittyGritty.Uwp.Interactivity.Behaviors"
    xmlns:platform="using:JumpPoint.Platform"
    xmlns:actions="using:JumpPoint.Uwp.Interactivity.Actions"
    xmlns:behaviors="using:JumpPoint.Uwp.Interactivity.Behaviors"
    xmlns:gtext="using:Glif.Core.Text"
    xmlns:commands="using:JumpPoint.ViewModels.Commands"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <CollectionViewSource x:Key="ItemsViewSource" x:Name="ItemsViewSource"/>
        <conv:NothingToShowConverter x:Name="NothingToShowConverter">
            <ngconv:Binding Value="{x:Bind IsLoading, Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind ItemsSource.Count, Mode=OneWay}" />
        </conv:NothingToShowConverter>

        <conv:AppBarSeparatorVisibilityConverter x:Key="OpenGroupSeparatorConverter">
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsOpenWithEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsOpenInNewTabEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsOpenInNewWindowEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsOpenInFileExplorerEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsOpenInCommandPromptEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsOpenInPowershellEnabled(Context), Mode=OneWay}" />
        </conv:AppBarSeparatorVisibilityConverter>
        <conv:AppBarSeparatorVisibilityConverter x:Key="ToolsGroupSeparatorConverter">
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsAddToWorkspaceEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsAddToFavoritesEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsRemoveFromFavoritesEnabled(Context), Mode=OneWay}" />
        </conv:AppBarSeparatorVisibilityConverter>
        <conv:AppBarSeparatorVisibilityConverter x:Key="TemplateGroupSeparatorConverter">
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsSetWorkspaceTemplateEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:Toolbar.IsSetFolderTemplateEnabled(Context), Mode=OneWay}" />
        </conv:AppBarSeparatorVisibilityConverter>
        <conv:AppBarSeparatorVisibilityConverter x:Key="PathContextToolsGroupSeparatorConverter">
            <ngconv:Binding Value="{x:Bind commands:NavigationBar.IsAddToWorkspaceEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:NavigationBar.IsAddToFavoritesEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:NavigationBar.IsRemoveFromFavoritesEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:NavigationBar.IsSetWorkspaceTemplateEnabled(Context), Mode=OneWay}" />
            <ngconv:Binding Value="{x:Bind commands:NavigationBar.IsSetFolderTemplateEnabled(Context), Mode=OneWay}" />
        </conv:AppBarSeparatorVisibilityConverter>
        
        <winui:CommandBarFlyout x:Key="ItemContextFlyout" Placement="BottomEdgeAlignedLeft">
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource OpenCommand}"
                          IsEnabled="{x:Bind commands:Toolbar.IsOpenEnabled(Context), Mode=OneWay}"
                          Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource CopyCommand}"
                          IsEnabled="{x:Bind commands:Toolbar.IsCopyEnabled(Context), Mode=OneWay}"
                          Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource CutCommand}"
                          IsEnabled="{x:Bind commands:Toolbar.IsCutEnabled(Context), Mode=OneWay}"
                          Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource DeleteCommand}"
                          IsEnabled="{x:Bind commands:Toolbar.IsDeleteEnabled(Context), Mode=OneWay}"
                          Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource RenameCommand}"
                          IsEnabled="{x:Bind commands:Toolbar.IsRenameEnabled(Context), Mode=OneWay}"
                          Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource ItemsPropertiesCommand}"
                          IsEnabled="{x:Bind commands:Toolbar.IsPropertiesEnabled(Context), Mode=OneWay}"
                          Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
            <winui:CommandBarFlyout.SecondaryCommands>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenWithCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsOpenWithEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenItemsInNewTabCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsOpenInNewTabEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenItemsInNewWindowCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsOpenInNewWindowEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenItemsInFileExplorerCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsOpenInFileExplorerEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenItemsInCommandPromptCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsOpenInCommandPromptEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenItemsInPowershellCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsOpenInPowershellEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarSeparator Visibility="{Binding Source={StaticResource OpenGroupSeparatorConverter}, Path=Output, Mode=OneWay}" /> 

                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource AddItemsToWorkspaceCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsAddToWorkspaceEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource AddItemsToFavoritesCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsAddToFavoritesEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource RemoveItemsFromFavoritesCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsRemoveFromFavoritesEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarSeparator Visibility="{Binding Source={StaticResource ToolsGroupSeparatorConverter}, Path=Output, Mode=OneWay}" />

                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource SetItemsWorkspaceTemplateCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsSetWorkspaceTemplateEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource SetItemsFolderTemplateCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsSetFolderTemplateEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarSeparator Visibility="{Binding Source={StaticResource TemplateGroupSeparatorConverter}, Path=Output, Mode=OneWay}" />

                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource CopyItemsPathCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsCopyItemsPathEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource DownloadItemsCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsDownloadEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource ShareItemsCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsShareEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource MoreToolsCommand}"
                              IsEnabled="{x:Bind commands:Toolbar.IsMoreToolsEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}"/>
            </winui:CommandBarFlyout.SecondaryCommands>
        </winui:CommandBarFlyout>

        <winui:CommandBarFlyout x:Key="PathContextFlyout" Placement="BottomEdgeAlignedLeft">
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource CopyPathCommand}" />
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource SharePathCommand}" />
            <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                          Command="{StaticResource PathPropertiesCommand}"
                          IsEnabled="{x:Bind commands:NavigationBar.IsPropertiesEnabled(Context), Mode=OneWay}"
                          Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
            <winui:CommandBarFlyout.SecondaryCommands>
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenPathInNewWindowCommand}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenPathInFileExplorerCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsOpenInFileExplorerEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenPathInCommandPromptCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsOpenInCommandPromptEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenPathInPowershellCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsOpenInPowershellEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource OpenPathInWindowsTerminalCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsOpenInWindowsTerminalEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarSeparator Visibility="{Binding Source={StaticResource PathContextToolsGroupSeparatorConverter}, Path=Output, Mode=OneWay}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource AddPathToWorkspaceCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsAddToWorkspaceEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource AddPathToFavoritesCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsAddToFavoritesEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource RemovePathFromFavoritesCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsRemoveFromFavoritesEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource SetPathWorkspaceTemplateCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsSetWorkspaceTemplateEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
                <AppBarButton CommandParameter="{x:Bind Context, Mode=OneWay}"
                              Command="{StaticResource SetPathFolderTemplateCommand}"
                              IsEnabled="{x:Bind commands:NavigationBar.IsSetFolderTemplateEnabled(Context), Mode=OneWay}"
                              Visibility="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsEnabled}" />
            </winui:CommandBarFlyout.SecondaryCommands>
        </winui:CommandBarFlyout>

        <Style x:Key="AllLayoutItemStyle"
           TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="UseSystemFocusVisuals" Value="True" />
            <Setter Property="FocusVisualMargin" Value="0" />
            <Setter Property="FocusVisualPrimaryBrush" Value="{ThemeResource ListViewItemFocusVisualPrimaryBrush}" />
            <Setter Property="FocusVisualPrimaryThickness" Value="2" />
            <Setter Property="FocusVisualSecondaryBrush" Value="{ThemeResource ListViewItemFocusVisualSecondaryBrush}" />
            <Setter Property="FocusVisualSecondaryThickness" Value="1" />
            <Setter Property="TabNavigation" Value="Local" />
        </Style>
        
        <!--#region Details View -->
        <Style x:Key="DetailsLayoutItemStyle"
               TargetType="ListViewItem" BasedOn="{StaticResource AllLayoutItemStyle}">
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter ContentTransitions="{TemplateBinding ContentTransitions}"
                                               Control.IsTemplateFocusTarget="True"
                                               FocusVisualMargin="{TemplateBinding FocusVisualMargin}"
                                               FocusVisualPrimaryBrush="{TemplateBinding FocusVisualPrimaryBrush}"
                                               FocusVisualPrimaryThickness="{TemplateBinding FocusVisualPrimaryThickness}"
                                               FocusVisualSecondaryBrush="{TemplateBinding FocusVisualSecondaryBrush}"
                                               FocusVisualSecondaryThickness="{TemplateBinding FocusVisualSecondaryThickness}"
                                               SelectionCheckMarkVisualEnabled="{ThemeResource ListViewItemSelectionCheckMarkVisualEnabled}"
                                               CheckBrush="{ThemeResource SystemAccentBrush}"
                                               CheckBoxBrush="{ThemeResource ListViewItemCheckBoxBrush}"
                                               DragBackground="{ThemeResource ListViewItemDragBackground}"
                                               DragForeground="{ThemeResource ListViewItemDragForeground}"
                                               FocusBorderBrush="{ThemeResource ListViewItemFocusBorderBrush}"
                                               FocusSecondaryBorderBrush="{ThemeResource ListViewItemFocusSecondaryBorderBrush}"
                                               PlaceholderBackground="{ThemeResource ListViewItemPlaceholderBackground}"
                                               PointerOverBackground="{ThemeResource ListViewItemBackgroundPointerOver}"
                                               PointerOverForeground="{ThemeResource ListViewItemForegroundPointerOver}"
                                               SelectedBackground="{ThemeResource ListViewItemBackgroundSelected}"
                                               SelectedForeground="{ThemeResource ListViewItemForegroundSelected}"
                                               SelectedPointerOverBackground="{ThemeResource ListViewItemBackgroundSelectedPointerOver}"
                                               PressedBackground="{ThemeResource ListViewItemBackgroundPressed}"
                                               SelectedPressedBackground="{ThemeResource ListViewItemBackgroundSelectedPressed}"
                                               DisabledOpacity="{ThemeResource ListViewItemDisabledThemeOpacity}"
                                               DragOpacity="{ThemeResource ListViewItemDragThemeOpacity}"
                                               ReorderHintOffset="{ThemeResource ListViewItemReorderHintThemeOffset}"
                                               HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                               VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                               ContentMargin="{TemplateBinding Padding}"
                                               CheckMode="Inline" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="FolderDetailsTemplate" x:DataType="items:FolderBase">
            <Grid Background="Transparent"
                  ContextFlyout="{StaticResource ItemContextFlyout}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="*" MinWidth="200" />
                    <ColumnDefinition Width="0.35*" MinWidth="150" />
                    <ColumnDefinition Width="0.25*" MinWidth="100" />
                    <ColumnDefinition Width="0.25*" MinWidth="100" />
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Image VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Width="20"
                       Height="20"
                       Loaded="OnIconLoaded"
                       Opacity="{x:Bind Attributes, Mode=OneWay, Converter={StaticResource HiddenOpacityConverter}}">
                    <Image.Source>
                        <BitmapImage DecodePixelHeight="24"
                                     DecodePixelWidth="24"
                                     DecodePixelType="Logical"
                                     UriSource="{x:Bind conv:IconConverter.GetFolderIconUri(FolderTemplate), Mode=OneWay}"/>
                    </Image.Source>
                </Image>

                <!-- Name -->
                <HyperlinkButton VerticalAlignment="Center"
                                 HorizontalContentAlignment="Stretch"
                                 Margin="8,0"
                                 Grid.Column="1"
                                 Padding="0"
                                 Click="OnItemOpened"
                                 Foreground="{ThemeResource ApplicationForegroundThemeBrush}">
                    <TextBlock Text="{x:Bind Name, Mode=OneWay}"
                               ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap"
                               FontFamily="{x:Bind helpers:ServiceLocator.AppSettings.Font, Mode=OneWay}"
                               FontStyle="{x:Bind gtext:FontStyleExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStyle), Mode=OneWay}"
                               FontWeight="{x:Bind gtext:FontWeightExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontWeight), Mode=OneWay}"
                               FontStretch="{x:Bind gtext:FontStretchExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStretch), Mode=OneWay}" />
                </HyperlinkButton>

                <!-- Date -->
                <TextBlock Text="{x:Bind DateModified, Converter={StaticResource NullableDateTimeOffsetToLocalConverter}, ConverterParameter='N/A', Mode=OneWay}"
                           ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                           Margin="8,0"
                           Grid.Column="2" VerticalAlignment="Center"
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>

                <!-- Type -->
                <TextBlock Text="{x:Bind DisplayType, Mode=OneWay}" Margin="8,0"
                           ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                           Grid.Column="3" VerticalAlignment="Center"
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>

                <!-- Size -->
                <TextBlock Text="{x:Bind Size, Converter={StaticResource ByteSizeConverter}, Mode=OneWay}"
                           ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                           Grid.Column="4" VerticalAlignment="Center"
                           HorizontalAlignment="Right" Margin="8,0"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="FileDetailsTemplate" x:DataType="items:FileBase">
            <Grid Background="Transparent"
                  ContextFlyout="{StaticResource ItemContextFlyout}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="*" MinWidth="200" />
                    <ColumnDefinition Width="0.35*" MinWidth="150" />
                    <ColumnDefinition Width="0.25*" MinWidth="100" />
                    <ColumnDefinition Width="0.25*" MinWidth="100" />
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Image Source="{x:Bind conv:FileThumbnailConverter.Convert(FileType, Thumbnail, 24, 0), Mode=OneWay}"
                       x:Phase="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Width="20"
                       Height="20"
                       Loaded="OnIconLoaded"
                       Opacity="{x:Bind Attributes, Mode=OneWay, Converter={StaticResource HiddenOpacityConverter}}"/>

                <!-- Name -->
                <HyperlinkButton VerticalAlignment="Center"
                                 HorizontalContentAlignment="Stretch"
                                 Margin="8,0"
                                 Grid.Column="1"
                                 Padding="0"
                                 Click="OnItemOpened"
                                 Foreground="{ThemeResource ApplicationForegroundThemeBrush}">
                    <Grid>
                        <TextBlock Text="{x:Bind Name, Mode=OneWay}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap"
                                   ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                                   Visibility="{x:Bind helpers:ServiceLocator.AppSettings.ShowFileExtension, Mode=OneWay}"
                                   FontFamily="{x:Bind helpers:ServiceLocator.AppSettings.Font, Mode=OneWay}"
                                   FontStyle="{x:Bind gtext:FontStyleExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStyle), Mode=OneWay}"
                                   FontWeight="{x:Bind gtext:FontWeightExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontWeight), Mode=OneWay}"
                                   FontStretch="{x:Bind gtext:FontStretchExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStretch), Mode=OneWay}" />
                        <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap"
                                   ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                                   Visibility="{x:Bind helpers:ServiceLocator.AppSettings.ShowFileExtension, Converter={StaticResource VisibleWhenFalseConverter}, Mode=OneWay}"
                                   FontFamily="{x:Bind helpers:ServiceLocator.AppSettings.Font, Mode=OneWay}"
                                   FontStyle="{x:Bind gtext:FontStyleExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStyle), Mode=OneWay}"
                                   FontWeight="{x:Bind gtext:FontWeightExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontWeight), Mode=OneWay}"
                                   FontStretch="{x:Bind gtext:FontStretchExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStretch), Mode=OneWay}" />
                    </Grid>
                </HyperlinkButton>

                <!-- Date -->
                <TextBlock Text="{x:Bind DateModified, Converter={StaticResource NullableDateTimeOffsetToLocalConverter}, ConverterParameter='N/A', Mode=OneWay}"
                           ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                           Margin="8,0"
                           Grid.Column="2" VerticalAlignment="Center"
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>

                <!-- Type -->
                <TextBlock Text="{x:Bind DisplayType, Mode=OneWay}" Margin="8,0"
                           ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                           Grid.Column="3" VerticalAlignment="Center"
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>

                <!-- Size -->
                <TextBlock Text="{x:Bind Size, Converter={StaticResource ByteSizeConverter}, Mode=OneWay}"
                           ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                           Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="8,0"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DriveDetailsTemplate" x:DataType="items:DriveBase">
            <Grid Background="Transparent"
                  ContextFlyout="{StaticResource ItemContextFlyout}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="*" MinWidth="200" />
                    <ColumnDefinition Width="0.35*" MinWidth="150" />
                    <ColumnDefinition Width="0.25*" MinWidth="100" />
                    <ColumnDefinition Width="0.25*" MinWidth="100" />
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Image VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Width="20"
                       Height="20"
                       Loaded="OnIconLoaded"
                       Opacity="{x:Bind Attributes, Mode=OneWay, Converter={StaticResource HiddenOpacityConverter}}">
                    <Image.Source>
                        <BitmapImage DecodePixelHeight="24"
                                     DecodePixelWidth="24"
                                     DecodePixelType="Logical"
                                     UriSource="{x:Bind conv:IconConverter.GetDriveIconUri(DriveTemplate), Mode=OneWay}" />
                    </Image.Source>
                </Image>

                <!-- Name -->
                <HyperlinkButton VerticalAlignment="Center"
                                 HorizontalContentAlignment="Stretch"
                                 Margin="8,0"
                                 Grid.Column="1"
                                 Padding="0"
                                 Click="OnItemOpened"
                                 Foreground="{ThemeResource ApplicationForegroundThemeBrush}">
                    <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}"
                               ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="Wrap"
                               FontFamily="{x:Bind helpers:ServiceLocator.AppSettings.Font, Mode=OneWay}"
                               FontStyle="{x:Bind gtext:FontStyleExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStyle), Mode=OneWay}"
                               FontWeight="{x:Bind gtext:FontWeightExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontWeight), Mode=OneWay}"
                               FontStretch="{x:Bind gtext:FontStretchExtensions.ToPlatform(helpers:ServiceLocator.AppSettings.FontStretch), Mode=OneWay}" />
                </HyperlinkButton>

                <!-- Type -->
                <TextBlock Text="{x:Bind DisplayType, Mode=OneWay}" Margin="8,0"
                           ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                           Grid.Column="3" VerticalAlignment="Center"
                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>

                <!-- Space -->
                <TextBlock Grid.Column="4"
                           VerticalAlignment="Center"
                           Margin="8,0"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"
                           Visibility="{x:Bind Capacity, Converter={StaticResource CollapsedWhenNullConverter}, Mode=OneWay}">
                    <Run Text="{x:Bind FreeSpace, Converter={StaticResource ByteSizeConverter}, Mode=OneWay}" />
                    <Run Text="free of" />
