                        <StackPanel Spacing="4"
                                    Padding="0,0,96,0"
                                    MinWidth="160">
                            <TextBlock Text="ALL ITEMS"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="{x:Bind humanizer:ToQuantityExtensions.ToQuantity('item', ViewModel.Context.ItemStats.Total, humanizer:ShowQuantityAs.Numeric), Mode=OneWay}" />
                            <ContentControl Content="{x:Bind ViewModel.Context.ItemStats, Mode=OneWay}"
                                            ContentTemplate="{StaticResource ItemStatsTemplate}"
                                            Margin="0,8,0,0" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <Button Style="{StaticResource StatusBarButton}"
                    Grid.Column="2">
                <TextBlock Text="{x:Bind humanizer:ToQuantityExtensions.ToQuantity('selected item', ViewModel.Context.SelectedItems.Count, humanizer:ShowQuantityAs.Numeric), Mode=OneWay}"
                           Foreground="White"/>
                <Button.Flyout>
                    <Flyout Placement="TopEdgeAlignedLeft">
                        <StackPanel Spacing="4"
                                    Padding="0,0,96,0"
                                    MinWidth="160">
                            <TextBlock Text="SELECTED ITEMS"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="{x:Bind humanizer:ToQuantityExtensions.ToQuantity('item', ViewModel.Context.SelectedItems.Count, humanizer:ShowQuantityAs.Numeric), Mode=OneWay}" />
                            <ContentControl Content="{x:Bind ViewModel.Context.SelectedItemStats, Mode=OneWay}"
                                            ContentTemplate="{StaticResource ItemStatsTemplate}"
                                            Margin="0,8,0,0" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
    </Grid>
        
</nguwp:NGPage>
