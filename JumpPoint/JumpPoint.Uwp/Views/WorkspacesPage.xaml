<nguwp:NGPage
    xmlns:nguwp="using:NittyGritty.Uwp"
    x:Class="JumpPoint.Uwp.Views.WorkspacesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JumpPoint.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:JumpPoint.Uwp.Controls"
    xmlns:services="using:JumpPoint.Platform.Services"
    xmlns:helpers="using:JumpPoint.Uwp.Helpers"
    mc:Ignorable="d">

    <Grid>
        <controls:JumpPointViewer Context="{x:Bind ViewModel, Mode=OneWay}"
                                  SortBy="{x:Bind helpers:ServiceLocator.AppSettings.SortBy, Mode=OneWay}"
                                  IsSortAscending="{x:Bind helpers:ServiceLocator.AppSettings.IsSortAscending, Mode=OneWay}"
                                  GroupBy="{x:Bind helpers:ServiceLocator.AppSettings.GroupBy, Mode=OneWay}"
                                  IsGroupAscending="{x:Bind helpers:ServiceLocator.AppSettings.IsGroupAscending, Mode=OneWay}"
                                  IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                  SelectedItems="{x:Bind ViewModel.SelectedItems, Mode=OneWay}"
                                  ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"/>
    </Grid>
</nguwp:NGPage>
